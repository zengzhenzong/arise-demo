input{
  -webkit-appearance:none;
}
.password-container{
  align-items:center;
  background-color:rgba(var(--color-page-background));
  background-position:bottom;
  background-repeat:no-repeat;
  background-size:cover;
  display:flex;
  flex-direction:column;
  flex-wrap:nowrap;
  height:100vh;
  justify-content:space-between;
  position:relative;
}
.password-container .hide{
  display:none;
}
.password-container .password-wrapper{
  align-items:center;
  color:rgba(var(--color-text));
  display:flex;
  flex:1;
  flex-direction:column;
  justify-content:center;
  text-align:center;
  width:927px;
}
@media (max-width:749.98px){
  .password-container .password-wrapper{
    padding:0 20px;
    position:relative;
    top:-60px;
    width:100%;
  }
}
.password-container .password-header{
  margin-bottom:32px;
}
@media (max-width:749.98px){
  .password-container .password-header{
    margin-bottom:24px;
  }
}
.password-container .password-title{
  font-size:44px;
  font-weight:600;
}
@media (max-width:749.98px){
  .password-container .password-title{
    font-size:24px;
  }
}
.password-container .password-logo .password-image{
  height:60px;
  margin:auto;
}
@media (max-width:749.98px){
  .password-container .password-logo .password-image{
    height:68px;
    padding:12px 20px;
    width:118px;
  }
}
.password-container .password-logo .password-image img{
  height:100%;
  object-fit:contain;
}
.password-container .password-logo .password-logo-text{
  color:#fff;
  display:inline-block;
  font-size:44px;
  font-weight:500;
}
@media (max-width:749.98px){
  .password-container .password-logo .password-logo-text{
    font-size:24px;
  }
}
.password-container .card{
  background-color:#fff;
  border-radius:12px;
  padding-bottom:39px;
  padding-top:62px;
  width:100%;
}
@media (max-width:749.98px){
  .password-container .card{
    border-radius:8px;
    padding-bottom:24px;
    padding-top:24px;
  }
}
.password-container .password-body__title{
  color:rgba(var(--color-text));
  font-size:40px;
  font-weight:600;
  margin:0 0 4px;
}
@media (max-width:749.98px){
  .password-container .password-body__title{
    font-size:24px;
  }
}
.password-container .password-logo-image img{
  max-height:500px;
  object-fit:contain;
}
.password-container .password-body__description{
  word-wrap:break-word;
  color:#949494;
  display:inline-block;
  font-size:22px;
  margin:0 0 32px;
  overflow:hidden;
  text-align:center;
  text-overflow:ellipsis;
  white-space:nowrap;
  width:calc(100% - 80px);
  word-break:break-all;
}
@media (max-width:749.98px){
  .password-container .password-body__description{
    font-size:14px;
    margin-bottom:16px;
    width:calc(100% - 40px);
  }
}
.password-container .form-control{
  background-color:transparent;
  border:1px solid #000;
  border-radius:4px;
  color:#2c2c2c;
  display:inline-block;
  flex:1;
  font-size:14px;
  gap:10px;
  height:44px;
  margin-bottom:20px;
  outline:none;
  padding:8px 12px;
  width:392px;
}
@media (max-width:749.98px){
  .password-container .form-control{
    margin-bottom:12px;
    width:299px;
  }
}
.password-container .form-button{
  background:#000;
  border-radius:4px;
  color:#fff;
  display:inline-block;
  font-size:16px;
  font-weight:600;
  height:44px;
  margin-bottom:20px;
  padding:9px 18px;
  width:392px;
}
@media (max-width:749.98px){
  .password-container .form-button{
    margin-bottom:12px;
    width:299px;
  }
}
.password-container .form-button:hover:active{
  opacity:.8;
}
.password-container .password-body__opts{
  color:#74716c;
  display:inline-block;
  font-size:14px;
  text-decoration-line:underline;
  text-underline-offset:3px;
}
.password-container .password-body__opts:hover:active{
  opacity:.8;
}
.password-container .password-into .password-body__opts{
  margin-bottom:16px;
}
@media (max-width:749.98px){
  .password-container .password-into .password-body__opts{
    margin-bottom:12px;
  }
}
.password-container .password-into .callback .password-body__opts{
  color:#74716c;
  margin-bottom:0;
}
.password-container .password-share{
  align-items:center;
  display:flex;
  font-size:18px;
  justify-content:center;
  margin-top:20px;
  padding:30px 0;
}
@media (max-width:749.98px){
  .password-container .password-share{
    flex-direction:column;
    font-size:14px;
    font-weight:400;
    padding:15px 20px;
  }
}
.password-container .password-share .password-share__desc{
  font-weight:600;
  max-width:200px;
}
@media (max-width:749.98px){
  .password-container .password-share .password-share__desc{
    margin-bottom:20px;
    max-width:150px;
  }
}
.password-container .password-share a{
  color:inherit;
  transition:transform 125ms cubic-bezier(.4, 0, .2, 1);
}
.password-container .password-share a:active{
  opacity:.8;
}
.password-container .password-share a:hover{
  color:inherit;
  transform:scale(1.1);
}
.password-container .password-share .password-share__social-icons:first-child a:first-child{
  margin-left:0;
}
.password-container .password-footer{
  font-size:16px;
  padding-bottom:30px;
  text-align:center;
}
@media (max-width:749.98px){
  .password-container .password-footer{
    display:none;
  }
}
.password-container .password-to-login{
  align-items:center;
  color:#fff;
  display:inline-flex;
  text-decoration-line:underline;
  text-underline-offset:3px;
}

.password-share__social-icons{
  column-gap:15px;
  display:flex;
}
@media (min-width:750px){
  .password-share__social-icons{
    margin-left:40px;
  }
}
@media (max-width:749.98px){
  .password-share__social-icons{
    flex-wrap:wrap;
    justify-content:center;
    row-gap:15px;
  }
}
.password-share__social-icons a{
  display:block;
  height:40px;
  width:40px;
}
.password-share__social-icons a svg{
  height:100%;
  width:100%;
}